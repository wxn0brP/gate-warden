{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "paths": {},
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "inlineSourceMap": false,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
    },
    "include": [
       "./src"
    ],
    "exclude": [
        "node_modules",
        "src/test"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
